@model P3Image_Teste.Publico.Models.FormP3imageModel
@using P3Image_Teste.Infra.Helper;

@{
    ViewBag.Title = "Formulario";
}

 @if (Model != null)
    {
    <h2><b>Categoria:</b> @Model.Categoria.descricao</h2>
    <h2><b>Subcategoria:</b> @Model.Subcategoria.descricao</h2>
    <h3>Formulário</h3>
   
    <table id="formulario">
        
        @foreach (var item in Model.Campos)
        {
            <tr>
                <td>
                    @Html.Label(item.descricao)
                </td>
                <td>
                    @Html.Raw(GerarHtml.GerarCampoHTML(item.tipo, item.campoId, item.listacheckDrop))
                </td>
            </tr>
        }

        <tr><td><input type="submit" value="Salvar" /></td></tr>

    </table> 
    }
else
{
    <h3>Favor digitar a rota {slugCategoria}/{slugSubcategoria} corretamente.</h3>
}

