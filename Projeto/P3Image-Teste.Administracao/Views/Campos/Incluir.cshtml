@model P3Image_Teste.Administracao.Models.CamposModel

@{
    ViewBag.Title = "Incluir";
}

<h2>Incluir</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(X => X.subCategoriaId)
    <fieldset>
        <legend>Campos</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tipo)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(o => o.tipo, Model.tipoItens, "", new { @class = "dropdownlist", style = "width:312px", onchange = "VerCampo()" })
            @Html.ValidationMessageFor(model => model.tipo)
        </div>
        <div id="divListagem" style="display:none">
            <div class="editor-label">
                @Html.LabelFor(model => model.listacheckDrop)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.listacheckDrop)
                @Html.ValidationMessageFor(model => model.listacheckDrop)
            </div>
        </div>
        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para listagem", "Index")
</div>
<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>

<script type="text/javascript">

    function VerCampo() {

        var liberar = $("#tipo option:selected").val();
        if (liberar == '3' || liberar == '4') {
            $("#divListagem").show();
        }
        else
        {
            $("#divListagem").remove();

        }

    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
