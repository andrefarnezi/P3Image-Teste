@model P3Image_Teste.Administracao.Models.SubCategoriaCampos

@{
    ViewBag.Title = "Campos";
}

<h2>Campos - @Model.SubCategoria.descricao</h2>
<p>
    @Html.ActionLink("Incluir novo Campo", "Incluir", new { id=Model.SubCategoria.subCategoriaId})
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.listaCampos.FirstOrDefault().ordenacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.listaCampos.FirstOrDefault().descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.listaCampos.FirstOrDefault().tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.listaCampos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ordenacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoTexto)
            </td>
            <td>
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.campoId }) |
            @Html.ActionLink("Editar", "Editar", new { id=item.campoId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.campoId })
            </td>
        </tr>
}

</table>