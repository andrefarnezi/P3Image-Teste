@model P3Image_Teste.Administracao.Models.SubCategoriaModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubCategoria</legend>

        @Html.HiddenFor(model => model.subCategoriaId)

        <div class="editor-label">
             <b>  @Html.LabelFor(model => model.CategoriaId)</b>
        </div>
        <div class="editor-field">
              @Html.DropDownListFor(m => m.categoria.categoriaId, (IEnumerable<SelectListItem>)ViewBag.ListaDrop)
            @Html.ValidationMessageFor(model => model.categoria.categoriaId)
        </div>
        <div class="editor-label">
            <b>@Html.LabelFor(model => model.descricao)</b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

     
       

        <p>
            <input type="submit" value="Salvar  " />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para listagem", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
